$claim-color: #db2123;
$evidence-color: #ffb500;
$reasoning-color: #ff6900;
$counter-color: #35a21c;

.comment-categories {
  margin-bottom: 1em;
}

.nested-comment {
  padding-left: 3em;
}

.comment-category {
  display: inline-block;
  width: 100px;
  text-align:center;
}

.comment {
  padding-bottom: 2em;
}

.icon-bar {
  position: absolute;
  left: 10px;
  bottom: 10px;
  display: none;
}

.icon-bar.visible {
  display: block;
}

.comment-for-comment-form {
  display: none;
}

.form-visible .icon-bar {
  display: block;
  position: relative;
  left: -10px;
  bottom: 0px;
  top: 8px;
}

.form-visible .comment-for-comment-form {
  display: block;
  margin-left: 8px;
  margin-top: 1em;
}

.icon-desc {
  display: inline-block;
  vertical-align: middle;
}

.icon-bar.selected {
  display: block;
}

.icon-bar .comment-category {
  width: 50px;
}

.icon-container {
  display: inline-block;
  vertical-align: middle;
  border-radius: 50%;
  width: 60px;
  padding: 15px;
  background-color: #DDD;
  cursor: pointer;
  &:hover {
    background-color: #999;
  }
  img {
    width: 100%;
  }
  &.selected {
    border: 1px solid #333;
  }
  &.claim.selected {
    background-color: $claim-color;
  }
  &.evidence.selected {
    background-color: $evidence-color;
  }
  &.reasoning.selected {
    background-color: $reasoning-color;
  }
  &.counter.selected {
    background-color: $counter-color;
  }
  &.small {
    height: 30px;
    width: 30px;
    // padding: 7px;

    &.claim {
      background-color: $claim-color;
      border: 2px solid $claim-color;
    }
    &.evidence {
      background-color: $evidence-color;
      border: 2px solid $evidence-color;
    }
    &.reasoning {
      background-color: $reasoning-color;
      border: 2px solid $reasoning-color;
    }
    &.counter {
      background-color: $counter-color;
      border: 2px solid $counter-color;
    }
    &.selected {
      // width: 36px;
      // padding: 9px;
      border: 2px solid #333;
    }
  }
}

h5 {
  margin-bottom: 0;
}

h5 span {
  vertical-align: middle;
}

.tag {
  display: inline-block;
  width: 1em;
  height: 1em;
  border-radius: 50%;
  vertical-align: middle;
  &.claim { background-color: $claim-color }
  &.evidence { background-color: $evidence-color }
  &.reasoning { background-color: $reasoning-color }
  &.counter { background-color: $counter-color }

}
