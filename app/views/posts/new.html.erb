<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div>
        <div>
          <h2>
            Add a new post
          </h2>

          <form action="/insert_post" method="post">

            <div class="form-group">
              <label for="title_box">
                Title
              </label>

              <input type="text" id="title_box" name="query_title" class="form-control">
            </div>

            <div class="form-group">
              <label for="body_box">
                Body
              </label>

              <input id="body_box" name="query_body" type="hidden" name="content">
              <trix-editor input="body_box"></trix-editor>
            </div>

            <button class="btn btn-primary">
              Create post
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
